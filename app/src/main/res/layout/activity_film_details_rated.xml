<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212121"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/logo"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PULP FICTION"
                style="@style/FilmMasterFont"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:id="@+id/filmPoster"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="poster"
                app:srcCompat="@drawable/pf" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressBackgroundTint="#7c7c7c"
                android:progressTint="#f4cb42"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/imgBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/addToFavourites"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/heart"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="10/10"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/addToWatchlist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/eye" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="YEAR"
                    style="@style/FilmMasterFont" />

                <TextView
                    android:id="@+id/timeHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TIME"
                    style="@style/FilmMasterFont"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1994"
                    style="@style/FilmMasterFontBig" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="124min"
                    style="@style/FilmMasterFontBig" />
            </LinearLayout>


            <TextView
                android:id="@+id/directorHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIRECTOR"
                style="@style/FilmMasterFont"/>

            <TextView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quentin Tarantino"
                style="@style/FilmMasterFontSmall"/>

            <TextView
                android:id="@+id/actorsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACTORS"
                style="@style/FilmMasterFont"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Travolta, Samuel Jackson, Umma Thurman, Bruce Willis"
                style="@style/FilmMasterFontSmall"/>

            <TextView
                android:id="@+id/plotHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLOT"
                style="@style/FilmMasterFont"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The lives of two mob hitmen, a boxer, a gangster's wife, and a pair of diner bandits intertwine in four tales of violence and redemption."
                style="@style/FilmMasterFontSmall" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight=".25">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemTextColor="#FFF"
            app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>


</LinearLayout>