<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212121">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/logo">

    </ImageView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="472dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filmTitle"
                android:layout_width="187dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="PULP FICTION"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/filmPoster" />

            <ImageView
                android:id="@+id/filmPoster"
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/filmTitle"
                android:contentDescription="poster"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar2"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/pf" />

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filmPoster"
                android:layout_centerHorizontal="true"
                android:progressBackgroundTint="#7c7c7c"
                android:progressTint="#f4cb42"
                app:layout_constraintStart_toStartOf="@id/filmPoster"
                app:layout_constraintTop_toBottomOf="@+id/imgBar" />

            <RelativeLayout
                android:id="@+id/imgBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ratingBar2"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/ratingBar2"
                app:layout_constraintTop_toBottomOf="@+id/year">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="41dp"
                    android:layout_height="39dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="88dp"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="86dp"
                    app:srcCompat="@drawable/eye" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="10/10"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="35dp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgBar"
                android:text="YEAR: 1994"
                android:textColor="#FFF"
                app:layout_constraintStart_toStartOf="@id/imgBar"
                app:layout_constraintTop_toBottomOf="@+id/time" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/year"
                android:text="TIME: 124min"
                android:textColor="#FFF"
                app:layout_constraintStart_toStartOf="@id/year"
                app:layout_constraintTop_toBottomOf="@+id/director" />

            <TextView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/time"
                android:text="DIRECTOR : Quentin Tarantino"
                android:textColor="#FFF"
                app:layout_constraintStart_toStartOf="@id/time"
                app:layout_constraintTop_toBottomOf="@+id/actors" />

            <TextView
                android:id="@+id/actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/director"
                android:text="ACTORS: John Travolta, Samuel Jackson, Umma Thurman, Bruce Willis"
                android:textColor="#FFF"
                app:layout_constraintStart_toStartOf="@id/director"
                app:layout_constraintTop_toBottomOf="@+id/plot" />

            <TextView
                android:id="@+id/plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/actors"
                android:text="CONTENT: The lives of two mob hitmen, a boxer, a gangster's wife, and a pair of diner bandits intertwine in four tales of violence and redemption."
                android:textColor="#FFF"
                app:layout_constraintStart_toStartOf="@id/actors"
                app:layout_constraintTop_toBottomOf="parent" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemTextColor="#FFF"
            app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>


</RelativeLayout>